#include<iostream>
using namespace std;
int max(int arr[],int n){
    int max=arr[0];
    for(int i=1;i<n;i++){
        if(arr[i]>max){
            max=arr[i];
        }
    }
    return max;
}
void countedsort(int arr[],int n,int exp){
    int count[10]={0};
    for(int i=0;i<n;i++){
        count[(arr[i]/exp)%10]++;
    }
    for(int i=1;i<10;i++){
        count[i]+=count[i-1];
    }
    int output[1000];
    for(int i=n-1;i>=0;i--){
        int digit=(arr[i]/exp)%10;
        output[count[digit]-1]=arr[i];
        count[digit]--;
    }
    for(int i=0;i<n;i++){
        arr[i]=output[i];
    } 
}
void radixsort(int arr[],int n){
    int maxval=arr[0];
    for(int i=1;i<n;i++){
        if(arr[i]>maxval){
            maxval=arr[i];
        }
    }
      for(int exp=1;maxval/exp>0;exp*=10)
        countedsort(arr,n,exp);
}
  int main(){
    int arr[90];
    int n;
    cout<<"enter size of an array:"<<endl;
    cin>>n;
    for(int i=0;i<n;i++){
        cout<<"enter element"<<endl;
        cin>>arr[i];
    }
    radixsort(arr,n);
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
         cout<<endl;
    return 0;
}
